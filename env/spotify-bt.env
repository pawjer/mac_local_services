# Spotify BT API Configuration

# Server settings
PORT=8766
BIND_HOST=0.0.0.0
LOG_LEVEL=info

# Bluetooth settings
# Use system_profiler for SSH compatibility (works in remote sessions)
BLUEUTIL_USE_SYSTEM_PROFILER=1
BT_CONNECT_TIMEOUT=5
BT_CONNECT_WAIT=2
BT_DISCONNECT_TIMEOUT=3

# Audio device filter keywords (comma-separated, case-insensitive)
# Devices matching any of these keywords will be shown in /speakers endpoint
AUDIO_DEVICE_KEYWORDS=speaker,headphone,headset,earphone,earbud,airpod,beats,jbl,bose,sony,soundbar,audio,music,soundcore,liberty,wh-,wf-,anker,jabra,sennheiser,marshall,john

# Spotify settings
SPOTIFY_LAUNCH_DELAY=2
